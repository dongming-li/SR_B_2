<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollbar"
    style="@android:style/Widget.ScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fillViewport="false"
    android:scrollbarStyle="insideOverlay"
    android:visibility="visible"
    tools:context="com.example.rem.landingpage.edit_screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:ems="10"
                android:hint="First Name"
                android:textSize="30sp"
                android:inputType="textPersonName"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editFirstName"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:ems="10"
                android:textSize="30sp"
                android:hint="Last Name"
                android:inputType="textPersonName"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editFirstName" />

            <EditText
                android:id="@+id/editPartyA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="30sp"
                android:inputType="textPersonName"
                android:layout_below="@+id/button"
                android:hint="Party" />

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editPartyA"
                android:ems="10"
                android:textSize="30sp"
                android:inputType="textPersonName"
                android:hint="Email" />

            <EditText
                android:id="@+id/confEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editEmail"
                android:ems="10"
                android:textSize="30sp"
                android:inputType="textEmailAddress"
                android:hint="Confirm E-mail" />

            <EditText
                android:id="@+id/editPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_below="@+id/confEmail"
                android:hint="Email"
                android:textSize="30sp"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/confPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editPass"
                android:ems="10"
                android:textSize="30sp"
                android:inputType="textPersonName"
                android:hint="Confirm Password" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/editPartyA"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/editPartyA"
                android:layout_below="@+id/editLastName"
                android:layout_marginTop="2dp"
                android:text="change profile pic" />

        </RelativeLayout>

        <EditText
            android:id="@+id/editPersSum"
            android:layout_width="318dp"
            android:layout_height="158dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:textSize="30sp"
            android:hint="Description"
            app:layout_constraintLeft_toLeftOf="@+id/guideline1"
            app:layout_constraintRight_toLeftOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="@+id/guideline2" />



        <Button
            android:id="@+id/fin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Done" />
    </LinearLayout>

</ScrollView>




